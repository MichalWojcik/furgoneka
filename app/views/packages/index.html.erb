<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Pickup date</th>
      <th>Delivery date</th>
      <th>Status</th>
      <th>Receiver street</th>
      <th>Receiver city</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.pickup_date %></td>
        <td><%= package.delivery_date %></td>
        <td><%= package.status %></td>
        <td><%= package.receiver_street %></td>
        <td><%= package.receiver_city %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Add package</h1>
<%= form_tag("/packages/new", method: "get") do %>
  Package number:
  <%= text_field_tag "package_id" %>
  <%= submit_tag("Go!") %>
<% end %>

